#include "../includes/fillit.h"

size_t	ft_totsize(int n)
{
	size_t	c;
	char	bu[1];

	c = 0;
	while (read(n, bu, 1))
		c++;
	close(n);
	return (c);
}

void	ft_verify(char **tet, int size)
{
	int		x;
	t_tetro	*new;
	t_map	*map;

	map = (t_map*)malloc(sizeof(t_map));
	map->size = 2;
	x = 0;
	while (x < size)
	{
		shapevalid(tet[x]);
		x++;
	}
	map->go = makemap(map->size);
	new = make_list(tet, size);
	transform(new, map, 1);
	start(new, map);
	freelist(new);
}

void	ft_tet(char *str, int size)
{
	char	**tet;
	int		i;
	int		m;
	int		f;
	int		l;

	tet = (char **)malloc(sizeof(char*) * ((size / 20) + 1));
	l = size % 20;
	i = (size / 20);
	m = 0;
	f = 0;
	if (!(i == l + 1) || i >= 26)
		ft_error();
	while (m < i)
	{
		tet[m] = ft_strnew(21);
		ft_strncpy(tet[m], &str[f], 20);
		tet[m][21] = '\0';
		m++;
		f += 21;
	}
	tet[m] = NULL;
	ft_verify(tet, i);
}

void	ft_read(char *str)
{
	int		fd;
	size_t	size;
	char	*file;

	fd = open(str, O_RDONLY);
	if (fd < 0)
		ft_putstr("File is not valid\n");
	else
	{
		size = ft_totsize(fd);
		file = ft_strnew(size + 1);
		fd = open(str, O_RDONLY);
		read(fd, file, size);
		ft_tet(file, size);
		free(file);
	}
}
